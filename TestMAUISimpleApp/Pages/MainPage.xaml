<?xml version = "1.0" encoding = "UTF-8" ?>
<ContentPage x:Class="TestMAUISimpleApp.Pages.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestMAUISimpleApp.ViewModels"
             x:DataType="local:MainPageViewModel">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20" WidthRequest="200">
        <Entry Placeholder="Name" Text="{Binding UserName}" FontSize="20"/>
        <Button Text="Users list" Command="{Binding GoToUserListCommand}"/>
    </VerticalStackLayout>
    
</ContentPage>