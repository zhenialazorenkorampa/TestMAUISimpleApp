<?xml version = "1.0" encoding = "UTF-8" ?>
<ContentPage x:Class="TestMAUISimpleApp.Pages.CreateUserPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestMAUISimpleApp.ViewModels"
             x:DataType="local:CreateUserPageViewModel">

    <VerticalStackLayout Padding="16" Spacing="10">

        <Entry
            Placeholder="Name"
            Text="{Binding Name}" />

        <Entry
            Placeholder="Age"
            Keyboard="Numeric"
            Text="{Binding Age}" />

        <Button
            Text="Save"
            Command="{Binding SaveCommand}" />

    </VerticalStackLayout>
</ContentPage>
